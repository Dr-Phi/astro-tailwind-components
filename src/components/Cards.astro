---
import Card from "./Card.astro";
import type { Props as CardProp } from "./Card.astro";

// Define the Props for this component
type Props = {
  cards: CardProp[]; // accepts an array of CardProps
};
// Retrieve the cards prop
const { cards } = Astro.props;
---

<div class="flex flex-col gap-y-4 mb-12 md:flex-row">
  <!-- Dynamically render multiple Card components and spread the 
   required card props -->
  {cards.map((card) => <Card {...card} />)}
</div>
